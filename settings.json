{
  // Display, fonts, theme, terminal
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "boundary",
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",
  "terminal.integrated.fontFamily": "DejaVuSansMonoForPowerline Nerd Font, consolas, monospace",
  "terminal.integrated.shell.linux": "/bin/zsh",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
  "workbench.colorTheme": "Cold Horizon",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "newUntitledFile",
  "window.zoomLevel": 0,

  // Extensions
  "discord.detailsDebugging": "{dirname}/{filename}",
  "discord.detailsEditing": "{dirname}/{filename}",
  "discord.lowerDetailsDebugging": "Line {currentline}/{totallines} | {filesize}",
  "discord.lowerDetailsEditing": "Line {currentline}/{totallines} | {filesize}",
  "discord.workspaceElapsedTime": true,
  "liveshare.featureSet": "insiders",
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "python.languageServer": "Microsoft",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // Formatting, linting, CI, and saving
  "git.enableSmartCommit": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.DS_Store": true,
    "**/db.json": true,
    "**/*.min.*": true,
    "**/*.log.*": true,
    "**/tmp": true,
    "**/cache": true,
    "**/test_assets": true,
    "**/node_modules": true,
    "**/rethinkdb_data": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/public_gen": true
  },

  // Annoyances and such
  "cmake.configureOnOpen": false,
  "csharp.suppressDotnetInstallWarning": true,
  "csharp.suppressProjectJsonWarning": true,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "vsicons.dontShowNewVersionMessage": true,

  // Filetype options
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },

  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },

  // Custom icon associations
  "vsicons.associations.folders": [
    {
      "icon": "template",
      "extensions": ["structures"]
    },
    {
      "icon": "db",
      "extensions": ["rethinkdb_data"]
    },
    {
      "icon": "log",
      "extensions": ["loggers"]
    },
    {
      "icon": "client",
      "extensions": ["partials"]
    },
    {
      "icon": "server",
      "extensions": ["webserver"]
    },
    {
      "icon": "db",
      "extensions": ["providers"]
    },
    {
      "icon": null,
      "extensions": ["image"]
    }
  ]
}
